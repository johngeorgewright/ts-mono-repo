{
  "name": "@johngeorgewright/ts-mono-repo",
  "version": "0.0.0",
  "description": "The MOL Ads mono-repo",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --exclude @johngeorgewright/generator run build",
    "build:generator": "yarn workspace @johngeorgewright/generator run build",
    "commit": "yarn git-cz",
    "generate:package": "yarn yo ./packages/generator/generators/package && yarn",
    "release": "yarn workspaces foreach --no-private yarn semantic-release -e semantic-release-monorepo",
    "start": "yarn workspaces foreach --topological-dev --no-private run start",
    "test": "yarn workspaces foreach run test"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-mono-repo/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-mono-repo#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@commitlint/config-lerna-scopes": "^12.0.0",
    "commitizen": "^4.2.1",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "semantic-release": "^17.1.2",
    "semantic-release-monorepo": "^7.0.3",
    "yo": "^3.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "prettier --ignore-path .gitignore --write"
    ]
  }
}
