{
  "name": "@johngeorgewright/ts-mono-repo",
  "version": "0.0.0",
  "description": "The MOL Ads mono-repo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "bun --workspaces run clean",
    "scaffold": "bun --filter packages/scaffold run cli",
    "prepare": "husky",
    "start": "bun run build --watch"
  },
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-mono-repo/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-mono-repo#readme",
  "catalog": {
    "@types/bun": "latest",
    "tslib": "^2.8.1",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@commitlint/types": "20.2.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "bunx prettier --write"
    ]
  }
}
