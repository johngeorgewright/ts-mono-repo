{
  "name": "@johngeorgewright/ts-mono-repo",
  "private": false,
  "version": "0.0.0",
  "description": "The MOL Ads mono-repo",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --exclude @johngeorgewright/generator run build",
    "build:generator": "yarn workspace @johngeorgewright/generator run build",
    "commit": "yarn git-cz",
    "generate:package": "yarn yo ./packages/generator/generators/package",
    "release": "yarn workspaces foreach --no-private run yarn semantic-release -e semantic-release-monorepo",
    "start": "yarn workspaces foreach --topological-dev --no-private run start",
    "test": "yarn workspaces foreach run test"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-mono-repo/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-mono-repo#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.3",
    "@commitlint/config-conventional": "^12.1.3",
    "@commitlint/config-lerna-scopes": "^12.1.3",
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "semantic-release": "^17.4.2",
    "semantic-release-monorepo": "^7.0.5",
    "yo": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  }
}
