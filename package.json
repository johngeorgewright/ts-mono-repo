{
  "name": "@johngeorgewright/ts-mono-repo",
  "version": "0.0.0",
  "description": "The MOL Ads mono-repo",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --verbose --topological-dev --exclude @johngeorgewright/scaffold run build",
    "clean": "yarn workspaces foreach run clean",
    "commit": "git-cz",
    "package:generate": "node --require ts-node/register $(yarn bin yo) ./packages/scaffold/src/package-generate",
    "package:remove": "node --require ts-node/register $(yarn bin yo) ./packages/scaffold/src/package-remove",
    "prepare": "husky install",
    "release": "yarn workspaces foreach --verbose --no-private --topological-dev run sematnic-release",
    "start": "yarn build && yarn workspaces foreach --verbose --no-private --parallel --interlaced run start",
    "test": "yarn workspaces foreach --verbose run test"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-mono-repo/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-mono-repo#readme",
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@commitlint/types": "17.4.0",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "29.4.0",
    "@types/node": "18.11.18",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "jest-runner": "29.4.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "semantic-release": "20.1.0",
    "semantic-release-monorepo": "7.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.4",
    "yo": "4.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --write"
    ]
  },
  "dependencies": {
    "tslib": "2.5.0"
  },
  "packageManager": "yarn@3.3.1"
}
