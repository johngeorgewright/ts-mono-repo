{
  "name": "@johngeorgewright/ts-mono-repo",
  "version": "0.0.0",
  "description": "The MOL Ads mono-repo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lage build",
    "scaffold": "npm run --workspace=@johngeorgewright/scaffold cli --",
    "prepare": "husky",
    "release": "lage release",
    "start": "lage start",
    "test": "lage test"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-mono-repo/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-mono-repo#readme",
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@commitlint/types": "19.5.0",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@types/node": "22.10.2",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "lage": "^2.12.4",
    "lint-staged": "15.2.11",
    "prettier": "3.4.2",
    "semantic-release": "24.2.0",
    "semantic-release-monorepo": "8.0.2",
    "semantic-release-monorepo-esm": "1.0.12",
    "typescript": "5.7.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "npx prettier --write"
    ]
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
