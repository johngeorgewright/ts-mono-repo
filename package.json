{
  "name": "@johngeorgewright/ts-mono-repo",
  "version": "0.0.0",
  "description": "The MOL Ads mono-repo",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --exclude @johngeorgewright/generator run build",
    "clean": "yarn workspaces foreach run clean",
    "commit": "git-cz",
    "package:generate": "node --require ts-node/register $(yarn bin yo) ./packages/generator/src/package-generate",
    "package:remove": "node --require ts-node/register $(yarn bin yo) ./packages/generator/src/package-remove",
    "prepare": "husky install",
    "release": "yarn workspaces foreach --no-private --topological-dev run sematnic-release",
    "start": "yarn build && yarn workspaces foreach --no-private --parallel --interlaced run start",
    "test": "yarn workspaces foreach run test"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-mono-repo/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-mono-repo#readme",
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@commitlint/types": "17.0.0",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.5",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "28.1.6",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.1",
    "isbinaryfile": "5.0.0",
    "jest-runner": "28.1.3",
    "json-parse-even-better-errors": "2.3.1",
    "lerna": "5.1.8",
    "lint-staged": "13.0.3",
    "mkdirp-infer-owner": "2.0.0",
    "prettier": "2.7.1",
    "semantic-release": "19.0.3",
    "semantic-release-monorepo": "7.0.5",
    "slash": "4.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "yo": "4.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --write"
    ]
  },
  "dependencies": {
    "tslib": "2.4.0"
  },
  "packageManager": "yarn@3.2.1"
}
